/№1/

SELECT Co.login,
       COUNT(Or."courierId") AS in_delivery
FROM "Couriers" AS Co
JOIN "Orders" AS Or
    ON Co.id = Or."courierId"
WHERE Or."inDelivery" = true
GROUP BY co.login;


/№2/

SELECT track,
    CASE
    WHEN finished = true THEN 2
    WHEN cancelled = true THEN -1
    WHEN "inDelivery" = true THEN 1
    ELSE 0
    END AS status
FROM "Orders";